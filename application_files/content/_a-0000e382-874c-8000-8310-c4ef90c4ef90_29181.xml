        <description>Interface to create and edit the standard possible answer</description>
        <parentUuid>_a-0000e382-874c-8000-8310-c4ef90c4ef90_25753</parentUuid>
        <visibility>
            <advertise>false</advertise>
            <hierarchy>true</hierarchy>
            <indexable>true</indexable>
            <quota>false</quota>
            <searchable>true</searchable>
            <system>false</system>
            <unlogged>false</unlogged>
        </visibility>
        <definition>#"SYSTEM_SYSRULES_formLayout_v1"(
  label: "Communication Answer " &amp; ri!answer.id,
  contents: {
    #"SYSTEM_SYSRULES_columnsLayout"(
      columns: {
        #"SYSTEM_SYSRULES_columnLayout"(
          contents: {
            #"SYSTEM_SYSRULES_paragraphField"(
              label: "Answer Body",
              labelPosition: if(
                ri!readOnly,
                "ADJACENT",
                "ABOVE"
              ),
              value: ri!answer.body,
              saveInto: ri!answer.body,
              readOnly: ri!readOnly,
              validations: if(
                len(
                  ri!answer.body
                ) &gt; 4000,
                "Value may not be longer than 4000 characters. You have entered " &amp; len(
                  ri!answer.body
                ) &amp; " characters.",
                null
              )
            )
          }
        ),
        #"SYSTEM_SYSRULES_columnLayout"(
          contents: {}
        )
      }
    )
  },
  buttons: #"SYSTEM_SYSRULES_ButtonLayout"(
    primaryButtons: {
      #"SYSTEM_SYSRULES_ButtonWidget"(
        label: "Submit",
        submit: true,
        style: "PRIMARY"
      )
    },
    secondaryButtons: {
      #"SYSTEM_SYSRULES_ButtonWidget"(
        label: "Cancel",
        value: true,
        saveInto: ri!cancel,
        submit: true,
        style: "NORMAL",
        validate: false
      )
    },
    showWhen: or(
      isnull(
        ri!readOnly
      ),
      not(
        ri!readOnly
      )
    )
  )
)</definition>
